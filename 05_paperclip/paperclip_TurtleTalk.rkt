(shape: paperclip (l w dia diff innerL upperSL lowerSL)
 (script:
   (sweep:
   (circle #:plane plane-XZ #:d dia)
   (named: tr (turtle:
    (tag! P0)
    (forward innerL)
    (tag! P1)
    (right 45)
    (forward upperSL)
    (tag! P2)
    (right 90)
    (forward upperSL)
    (tag! P3)
    (right 45)
    (forward (+ innerL diff))
    (tag! P4)
    (right 90)
    (forward-until-y (- P0.y dia 1))
    (right 90)
    (forward innerL)
    (right 45)
    (forward lowerSL)
    (tag! P7)
    (right 90)
    (forward lowerSL)
    (right 45)
    (forward-until-x 0)))))
 (constraints:
  (assert: (= l (- tr.P2.x tr.P4.x)))
  (assert: (= (- w dia) (- tr.P1.y tr.P3.y)))
  (assert: (= tr.P2.y tr.P7.y))))

(print: (paperclip #:l 65 #:w 25 #:dia 3 #:diff 7) "paperclip.stl")